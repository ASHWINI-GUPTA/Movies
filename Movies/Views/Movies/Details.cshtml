@model Movies.Models.Movie

@{
    ViewData["Title"] = "Details";
}
<div>
    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.MovieId">Edit</a> |
    <a class="btn btn-sm btn-primary" asp-action="Index">Back to List</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <img src="~/images/movie.png" alt="Avatar" style="width:100%">
    </div>
    <div class="col-md-6">
        <h1>@Model.MovieName</h1><hr />
        <h3><a asp-action="ProducerDetails" asp-route-id="@Model.Producer.Id">@Model.Producer.Name</a></h3>
        <h4>@Model.Released.ToString("MMMM dd, yyyy")</h4>
        <h4>@Model.Plot</h4>
        <h4><b>Cast</b></h4>
        <table class="table">
            <tbody>
                @foreach (var actor in Model.ActorMovies)
                {
                    <tr>
                        <td><h4><a asp-action="ActorDetails" asp-route-id="@actor.ActorId">@actor.Actor.Name</a></h4></td>
                    </tr> 
                }
            </tbody>
        </table>
    </div>
</div>


