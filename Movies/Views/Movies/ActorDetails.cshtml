@model Movies.Models.Actor

@{
    ViewData["Title"] = "Actor";
}
<div>
    <a class="btn btn-sm btn-primary" asp-action="Index">Back to List</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <img src="~/images/img_avatar.png" alt="Avatar" style="width:100%">
    </div>
    <div class="col-md-6">
        <h1>@Model.Name</h1><hr />
        <h4>@Model.Sex</h4>
        <h4>@Model.DOB.ToString("MMMM dd, yyyy")</h4>
        <h4>@Model.Bio</h4>
    </div>
</div>


